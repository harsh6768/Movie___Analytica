<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PopularMoviesDetails"
    tools:showIn="@layout/activity_popular_movies_details">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/popular_movie_details_descId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textSize="18sp"
            android:text="@string/large_text" />

        <TextView
            android:id="@+id/popular_movie_details_movie_lengthId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Video Length:134"
            android:textColor="@color/errorMessage"/>
        <TextView
            android:id="@+id/popular_movie_details_release_dateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Release Date"
            android:textColor="@color/errorMessage"
            />
        <RatingBar
            android:id="@+id/popular_movie_details_ratingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize=".1"
            android:numStars="10"
            android:theme="@style/RatingBar"
            android:layout_marginStart="16dp"
            android:rating="3"
            style="?android:attr/ratingBarStyleSmall"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>